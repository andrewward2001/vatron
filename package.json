{
  "name": "vatron",
  "version": "0.2.0",
  "description": "An open source, fast, and accessible VATSIM radar client built with Electron",
  "main": "index.js",
  "scripts": {
    "test": "yarn run jslint 'js/**/*.js' && node test/test.js",
    "start": "electron .",
    "build-win64": "electron-builder --x64",
    "build-darwin": "electron-builder --x64 --mac",
    "make-apt": "node navdata/airports_parse.js < navdata/airports.txt"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/andrewward2001/vatron.git"
  },
  "author": "Andrew Ward",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/andrewward2001/vatron/issues"
  },
  "homepage": "https://gitlab.com/andrewward2001/vatron#README",
  "devDependencies": {
    "cli": "^1.0.1",
    "electron": "1.7.8",
    "electron-builder": "^19.45.4",
    "electron-builder-lib": "^19.46.4",
    "electron-builder-squirrel-windows": "^19.46.4",
    "geojson-validation": "^0.2.0",
    "jslint": "^0.11.0",
    "path": "^0.12.7",
    "url": "^0.11.0"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-beta",
    "fs": "0.0.1-security",
    "jquery": "^3.2.1",
    "popper.js": "^1.12.9"
  },
  "build": {
    "appId": "com.andrewward2001.vatron",
    "productName": "Vatron",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "squirrel"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "artifactName": "${productName}Installer.${version}.${ext}",
      "installerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}Portable.${version}.${ext}"
    },
    "squirrelWindows": {
      "iconUrl": "https://gitlab.com/andrewward2001/vatron/blob/master/build/icon.ico"
    },
    "files": [
      {
        "filter": [
          "!fir_data/world.json"
        ]
      }
    ]
  }
}
